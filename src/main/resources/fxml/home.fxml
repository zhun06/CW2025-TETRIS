<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1000.0" styleClass="root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comp2042.controllers.HomeController">
    <Group />
    <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1000.0">
        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="1000.0">
            <Label styleClass="title" text="TETRIS" />
        </HBox>
        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="1000.0">
            <Label styleClass="homeLabel" text="Select game mode: " />
        </HBox>
        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="1000.0" spacing="50.0">
            <Button fx:id="prevBtn" alignment="CENTER" mnemonicParsing="false" onAction="#handleGamePreview" styleClass="arrowBtn" text="◀" />
            <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="310.0" prefWidth="510.0" styleClass="imgPane">
                <ImageView fx:id="gamePreview" fitHeight="300.0" fitWidth="500.0" pickOnBounds="true" />
            </HBox>
            <Button fx:id="nextBtn" alignment="CENTER" mnemonicParsing="false" onAction="#handleGamePreview" styleClass="arrowBtn" text="▶" />
        </HBox>
        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="1000.0" spacing="25.0">
            <Button fx:id="startBtn" mnemonicParsing="false" onAction="#onButtonClick" styleClass="homeBtn" text="START GAME" />
            <Button fx:id="themeBtn" mnemonicParsing="false" onAction="#onButtonClick" styleClass="homeBtn" text="CHANGE THEME" />
            <Button fx:id="leaderBoardBtn" mnemonicParsing="false" onAction="#onButtonClick" styleClass="homeBtn" text="LEADER BOARD" />
            <Button fx:id="quitBtn" mnemonicParsing="false" onAction="#onButtonClick" styleClass="homeBtn" text="QUIT GAME" />
        </HBox>
    </VBox>
</StackPane>
